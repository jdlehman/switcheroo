{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },

  "ecmaFeatures": {
    "modules": true,
    "jsx": true
  },

  "rules": {
    "no-reserved-keys": true,
    "radix": true,
    "indent": [2, 2],
    "camelcase": 2,
    "new-cap": [0, "capIsNew"],
    "eol-last": 2,
    "quotes": [2, "single", "avoid-escape"],
    "no-mixed-spaces-and-tabs": 2,
    "no-trailing-spaces": 2,
    "no-underscore-dangle": 2,
    "no-unused-vars": [1, { "args": "none" }]
  }
}
